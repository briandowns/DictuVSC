{
	"name": "dictuvsc",
	"description": "Dictu language server protocol",
	"author": "Jason Hall",
	"license": "MIT",
	"version": "1.0.3",
	"icon": "logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/dictu-lang/DictuVSC"
	},
	"publisher": "Dictu",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:dictu",
		"workspaceContains:**/*.du"
	],
	"main": "./dist/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Dictu LSP",
			"properties": {
				"dictuLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"dictuLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "dictu",
				"aliases": [
					"Dictu",
					"dictu"
				],
				"extensions": [
					".du",
					".dictu"
				],
				"configuration": "./client/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "dictu",
				"scopeName": "source.du",
				"path": "./client/syntaxes/dictu.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"@types/node": "^12.12.0",
		"@typescript-eslint/parser": "^2.3.0",
		"eslint": "^6.4.0",
		"mocha": "^8.1.1",
		"ts-loader": "^8.0.14",
		"typescript": "^4.0.2",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	}
}
